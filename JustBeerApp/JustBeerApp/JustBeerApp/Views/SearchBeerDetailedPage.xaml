<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="JustBeerApp.Views.SearchBeerDetailedPage"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid BackgroundColor="Gray" 
                  VerticalOptions="Start"
                  HorizontalOptions="Fill"
                  Padding="10">
                    <SearchBar 
                        x:Name="BeersSearchBar"
                        CancelButtonColor="White"
                        Placeholder="Search"
                        PlaceholderColor="#171717"
                        VerticalOptions="Center"
                        TextColor="White"
                        FontFamily="{StaticResource BoldFont}"
                        FontSize="15"
                        Text="{Binding Filter, Mode=TwoWay}"
                        SearchCommand="{Binding SearchCommand}"/>
                </Grid>
                <ListView 
                HasUnevenRows="True" 
                IsPullToRefreshEnabled="True"
                IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}"
                ItemsSource="{Binding HomeBeers}"
                RefreshCommand="{Binding RefreshCommand}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <!--<ViewCell.ContextActions>
                                    <MenuItem 
                                    Command="{Binding EditCommand}" 
                                    Text="Edit">
                                    </MenuItem>
                                    <MenuItem 
                                    Command="{Binding DeleteCommand}" 
                                    IsDestructive="true"     
                                    Text="Delete">
                                    </MenuItem>
                                </ViewCell.ContextActions>-->
                                <StackLayout Orientation="Horizontal" Padding="10">
                                    <Image 
                                            Source="{Binding Labels.Large}" 
                                           HeightRequest="60"
                                            WidthRequest="60"
                                           Margin="10,0,10,0"
                                            Aspect="Fill"/>
                                    <Label 
                                           Text="{Binding NameDisplay}"    
                                           FontAttributes="Bold"
                                            TextColor="White"
                                           Margin="0,20,10,0"/>

                                    <!--<StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding GoToBeerInfoPage}"
                                                          CommandParameter="{Binding .}"/>
                                    </StackLayout.GestureRecognizers>-->
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>